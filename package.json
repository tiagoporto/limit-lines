{
  "name": "limit-lines",
  "version": "1.0.0",
  "engines": {
    "node": ">=4.0.0"
  },
  "description": "Lint and report number of lines by file",
  "keywords": [
    "lint",
    "lines",
    "files",
    "lines by files",
    "max lines",
    "min lines",
    "report"
  ],
  "author": {
    "name": "Tiago Porto",
    "url": "http://tiagoporto.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/tiagoporto/limit-lines.git"
  },
  "main": "./limitlines.js",
  "bin": {
    "limitlines": "./limitlines.js"
  },
  "scripts": {
    "lint": "eslint ./limitlines.js",
    "prepare": "npm run lint",
    "tag": "git tag v$npm_package_version",
    "postpublish": "npm run tag && git push --tags"
  },
  "dependencies": {
    "chalk": "^2.4.1",
    "commander": "^2.19.0",
    "count-lines-in-file": "^1.1.0",
    "globby": "^14.0.1"
  },
  "devDependencies": {
    "eslint": "^5.16.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.17.2",
    "eslint-plugin-node": "^8.0.1",
    "eslint-plugin-promise": "^4.1.1",
    "eslint-plugin-standard": "^4.0.0"
  }
}
